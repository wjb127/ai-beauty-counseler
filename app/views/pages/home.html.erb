<!-- Modal -->
<div id="consultationModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50" data-controller="modal">
  <div class="flex items-center justify-center min-h-screen px-4">
    <div class="bg-white rounded-lg p-8 max-w-md w-full">
      <div class="flex justify-between items-center mb-6">
        <h3 class="text-2xl font-bold text-gray-800">AI 뷰티 상담</h3>
        <button class="text-gray-500 hover:text-gray-700" data-action="click->modal#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <form data-turbo="true" data-controller="consultation" data-action="submit->consultation#submit">
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2">피부타입</label>
          <select name="skinType" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-purple-500">
            <option>건성</option>
            <option>지성</option>
            <option>복합성</option>
            <option>민감성</option>
          </select>
        </div>
        
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2">주요 고민사항</label>
          <textarea name="concerns" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-purple-500" rows="3" placeholder="예: 여드름, 주름, 색소침착 등"></textarea>
        </div>
        
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2">예산 범위</label>
          <select name="budget" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-purple-500">
            <option>5만원 이하</option>
            <option>5-10만원</option>
            <option>10-20만원</option>
            <option>20만원 이상</option>
          </select>
        </div>
        
        <button type="submit" class="w-full bg-gradient-to-r from-pink-500 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-pink-600 hover:to-purple-700 transition duration-300">
          AI 분석 시작하기
        </button>
      </form>
    </div>
  </div>
</div>
